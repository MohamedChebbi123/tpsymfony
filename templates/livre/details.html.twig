{# templates/livre/details_livre.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Détails du Livre{% endblock %}

{% block stylesheets %}
    <style>
        .details-wrapper {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            background-color: #e9ecef;
            padding: 20px;
        }
        .details-card {
            max-width: 600px;
            width: 100%;
            background: #ffffff;
            border-radius: 10px;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.15);
            padding: 30px;
            font-family: Arial, sans-serif;
        }
        .details-card h1 {
            text-align: center;
            color: #343a40;
            font-size: 26px;
            margin-bottom: 25px;
        }
        .book-info {
            font-size: 17px;
            color: #495057;
            line-height: 1.5;
        }
        .book-info strong {
            display: inline-block;
            width: 130px;
            font-weight: 600;
            color: #212529;
        }
        .description {
            margin-top: 20px;
            font-size: 16px;
            color: #6c757d;
            padding-top: 10px;
            border-top: 1px solid #ddd;
        }
        .description strong {
            font-weight: 600;
            color: #212529;
        }
        .back-link {
            display: block;
            width: fit-content;
            margin: 25px auto 0;
            font-size: 16px;
            color: #28a745;
            text-decoration: none;
            font-weight: 600;
            transition: color 0.3s ease;
        }
        .back-link:hover {
            color: #218838;
            text-decoration: underline;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="details-wrapper">
        <div class="details-card">
            <h1>Détails sur le Livre: {{ livre.Titre }}</h1>
            <div class="book-info">
                <p><strong>Titre:</strong> {{ livre.Titre }}</p>
                <p><strong>Auteur:</strong> {{ livre.Auteur }}</p>
                <p><strong>Date de Publication:</strong> {{ livre.getDateDePublication()|date('Y-m-d') }}</p>
            </div>
            <div class="description">
                <strong>Description:</strong>
                <p>{{ livre.Description }}</p>
            </div>
            <a href="{{ path('app_livre_liste') }}" class="back-link">← Retour à la liste</a>
        </div>
    </div>
{% endblock %}
